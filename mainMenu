package bibliotecaPoo;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Menu.exibir();
    }

    public static class Menu {
        public static void exibir() {
            Scanner scanner = new Scanner(System.in);
            int opcao;
            do {
                System.out.println("\n===== üìö MENU PRINCIPAL üìö =====");
                System.out.println("1. ‚ûï Adicionar novo livro");
                System.out.println("2. üîç Pesquisar livro");
                System.out.println("3. üóëÔ∏è Remover livro");
                System.out.println("4. üìú Listar todos");
                System.out.println("5. üö™ Sair");
                System.out.print("üëâ O que voc√™ quer fazer? ");

                try {
                    opcao = scanner.nextInt();
                    scanner.nextLine();
                } catch (Exception e) {
                    System.out.println("\n‚ö†Ô∏è Ei campe√£o, digita um N√öMERO v√°lido a√≠, por favor!");
                    scanner.nextLine();
                    opcao = 0;
                    continue;
                }

                switch (opcao) {
                    case 1 -> Adicionar.executar(scanner);
                    case 2 -> Pesquisar.executar(scanner);
                    case 3 -> Remover.executar(scanner);
                    case 4 -> Listar.executar();
                    case 5 -> Encerrar.executar();
                    default -> System.out.println("\nü§® Op√ß√£o inv√°lida, meu chapa! Tenta de 1 a 5, por favor.");
                }
            } while (opcao != 5);

            scanner.close();
        }
    }
}
