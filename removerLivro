        if (index != -1) {
            BibliotecaDados.titulos.remove(index);
            BibliotecaDados.autores.remove(index);
            System.out.println("\nğŸ—‘ï¸ Pronto! Livro apagado da existÃªncia!");
        } else {
            System.out.println("\nğŸ¤·â€â™‚ï¸ Ixi, nÃ£o achei esse livro aÃ­...");
        }
    }
}
